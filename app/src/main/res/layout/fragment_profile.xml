<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484848"
    tools:context=".profileFragment">



    <ImageView
        android:id="@+id/coverimg"
        android:layout_width="396dp"
        android:layout_height="159dp"
        android:background="@drawable/coverimg"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="104dp"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/todo2"
        android:src="@drawable/pro_pic_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coverimg"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cool_cat2"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <LinearLayout
        android:id="@+id/pro_detail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/no_of_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/_113"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/followerstag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/followers"
            android:textColor="#BDBDBD"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mo_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/_150"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/followingtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/following"
            android:textColor="#BDBDBD"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/no_of_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/_100"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/likestag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/likes"
            android:textColor="#BDBDBD"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/post_layout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pro_detail">

        <TextView
            android:id="@+id/no_of_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/_25"
            android:textColor="#BDBDBD"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/poststag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/posts"
            android:textColor="#BDBDBD"
            android:textSize="17sp" />


    </LinearLayout>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="293dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_btn"
        android:backgroundTint="@color/grey"
        android:text="@string/edit_profile"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_layout"
        tools:ignore="TouchTargetSizeCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>
